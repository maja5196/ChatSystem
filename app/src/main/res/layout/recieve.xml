<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView android:id="@+id/recieveMessegeUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_marginLeft="10dp"
        android:textColor="@color/lightgrey"
        android:textSize="11sp"/>

    <RelativeLayout
        android:id="@+id/RLR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:background="@drawable/edt_background"
        android:layout_below="@id/recieveMessegeUser"
        >

        <TextView
            android:id="@+id/recieveMessege"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is a recieve messege"
            android:textColor="@color/white"
            android:padding="5dp"
            android:textSize="16sp"/>



    </RelativeLayout>

    <TextView android:id="@+id/recieveMessegeDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14/08/2021 13:59"
        android:layout_marginLeft="10dp"
        android:textColor="@color/lightgrey"
        android:layout_below="@id/RLR"
        android:textSize="11sp"/>


</RelativeLayout>